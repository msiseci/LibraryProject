@using Library.Models.Entity
@model List<Admin>
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>


<link rel="stylesheet" href="/AdminLTE-master/plugins/fontawesome-free/css/all.min.css">
<br />

<table class="table table-bordered">
    <tr>
        <td>Id</td>
        <td>Kullanıcı</td>
        <td>Yetki</td>
        <td>Düzenle</td>
        <td>Sil</td>
    </tr>
    @foreach (var item in Model)
    {


    <tr>
        <td>@item.Id</td>
        <td>@item.AdminUser</td>
        <td>@item.Authority</td>
        
        <td>

            <a class="btn btn-info" href="/Settings/AdminGuncelle/@item.Id">
                <i class="fas fa-pencil-alt">
                </i>
                Düzenle
            </a>
         </td>
            
         <td> <a class="btn btn-danger" href="/Settings/AdminSil/@item.Id">
                <i class="fas fa-trash">
                </i>
                Sil
              </a>
        </td>
        
    </tr>
    }
</table>
<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Yeni Admin Ekle</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Admin Ekleme Paneli</h2>
            </div>
            <form action="/Settings/YeniAdmin" method="post">
                <div class="modal-body">
                    <label>Kullanıcı Adı</label>
                    <input type="text" name="AdminUser" class="form-control" />
                    <br />
                    <label>Şifre</label>
                    <input type="text" name="Password" class="form-control" />
                    <br />
                    <label>Yetki</label>
                    <input type="text" name="Authority" class="form-control" />
                    <br />
                    <button class="btn btn-info">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>